<% if (typeof(errors) !== 'undefined') { %> 
    <div class="px-5 flex flex-col gap-3" id="alert-list">
        <% errors.forEach(item => { %>
            <div role="alert" class="alert alert-error">
                <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-8 w-8 cursor-pointer" fill="none" viewBox="0 0 24 24" id="close-btn">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span><%= item.msg %></span>
            </div>
        <% }) %>
    </div>
<% } %>
<div class="flex justify-center mt-10">
    <%- include('./components/form.ejs') %>
</div>

<script>
    const alertContainer = document.querySelector('#alert-list')
    alertContainer.addEventListener('click', even => {
        const button = even.target
        if(button.getAttribute('id') === 'close-btn') {
            const parentElement = button.parentElement
            parentElement.remove()
        }
    })

</script>